# ===================================
# 知识库服务环境变量配置
# 使用方法：cp .env.example .env
# ===================================

# Milvus 向量数据库
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION=knowledge_base

# LLM 服务 (vLLM / Ollama)
LLM_BASE_URL=http://localhost:8000
LLM_MODEL=Qwen/Qwen3-VL-8B
LLM_API_KEY=EMPTY

# Embedding 服务
EMBEDDING_BASE_URL=http://localhost:8001
EMBEDDING_MODEL=Qwen/Qwen3-Embedding-0.6B
EMBEDDING_API_KEY=EMPTY
EMBEDDING_DIMENSION=1024  # 0.6B=1024, 8B=4096

# Rerank 服务
RERANK_BASE_URL=http://localhost:8002
RERANK_MODEL=Qwen/Qwen3-Reranker-8B
RERANK_API_KEY=EMPTY
RERANK_TOP_K=5

# MinerU 文档解析服务
MINERU_BASE_URL=http://localhost:8003

# 应用配置
DEBUG=false

# 代理设置 (绕过代理直连内网服务)
no_proxy=localhost,127.0.0.1,192.168.25.177
NO_PROXY=localhost,127.0.0.1,192.168.25.177
